<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/item_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:id="@+id/item_selected"
        android:layout_width="28dip"
        android:layout_height="28dip"
        android:scaleType="center"
        android:layout_gravity="right"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_state_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/photo_11"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_state_2"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/photo_6"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_state_3"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/photo_7"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:maxLines="1"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="10dip"
            android:visibility="visible"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_state_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_list_bg"
        android:alpha="0.7"
        android:visibility="visible"/>

</FrameLayout>